<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#6bdf0bbd" />
            <gradient android:angle="-90" android:startColor="#8a987fb6" android:endColor="#641fb7"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#473270" />
            <solid android:color="#7847da"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="2dip" android:color="#feffffff" />
            <gradient android:angle="-90" android:startColor="#b9a207df" android:endColor="#6b10a6" />
        </shape>
    </item>
</selector>