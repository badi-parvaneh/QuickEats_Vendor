<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a160final.settingActivity">

    <ImageView
        android:id="@+id/userImageTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="129dp" />

    <Button
        android:id="@+id/changeImage"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userImageTest"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Set user Image" />

    <Button
        android:id="@+id/logOut"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/changeImage"
        android:layout_below="@+id/changeImage"
        android:layout_marginTop="10dp"
        android:text="Log out" />




</RelativeLayout>
